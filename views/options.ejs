<!DOCTYPE html>
<html>
  <head>
    <%- include('head') %>
  </head>
  <body>
    <form method="post" action="/options">
      <fieldset>
        <legend>Options</legend>
        <ul>
          <% options.forEach((option,i) => { %>
          <li>
            <label>
              <input
                type="radio"
                name="option"
                value="<%= option %>"
                id="<%= i + 1 %>"
              />
              <%= option %>
            </label>
          </li>
          <% }); %>
        </ul>
      </fieldset>
      <button type="submit">Continue</button>
    </form>
  </body>
</html>
