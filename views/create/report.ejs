<!DOCTYPE html>
<html>
  <head>
    <%- include('../head') %>
  </head>
  <body>
    <%- include('../titleAndNav') %>
    <section>
      <table>
        <tr>
          <td>pages</td>
          <td><%= text.pages %></td>
        </tr>
        <tr>
          <td>signature sequence</td>
          <td><%= text.signatureSequence %></td>
        </tr>
        <tr>
          <td colspan="2">page order</td>
        </tr>
        <tr>
          <td colspan="2">by signature</td>
        </tr>
        <% text.pageOrder.bySignature.forEach((sequence,i) => { %>
        <tr>
          <td><%= i+1 %></td>
          <td><%= sequence %></td>
        </tr>
        <% }); %>
        <tr>
          <td colspan="2">full</td>
        </tr>
        <tr>
          <td colspan="2"><%= text.pageOrder.full %></td>
        </tr>
      </table>
    </section>
    <a href="/create/report/save">save</a>
  </body>
</html>
